# ============================================
# Avito Parser — переменные окружения
# Скопируйте этот файл как .env и заполните значения:
#   cp .env.example .env
# ============================================

# --------------------------------------------
# AI (OpenRouter) — ОБЯЗАТЕЛЬНЫЕ
# --------------------------------------------
# URL API OpenRouter для chat completions
AI_API_URL=https://openrouter.ai/api/v1/chat/completions

# Ваш API-ключ OpenRouter (начинается с sk-or-v1-)
AI_API_KEY=

# Модель AI для нормализации названий товаров
AI_MODEL=qwen/qwen3.5-plus-02-15

# --------------------------------------------
# Avito — ОБЯЗАТЕЛЬНЫЕ
# --------------------------------------------
# URL категории Avito с фильтрами (например: https://www.avito.ru/moskva/noutbuki)
AVITO_CATEGORY_URL=

# --------------------------------------------
# Браузер — необязательные
# --------------------------------------------
# Режим без графического интерфейса (true/false)
HEADLESS_MODE=false

# Таймаут навигации в миллисекундах
NAVIGATION_TIMEOUT=90000

# Время ожидания после загрузки страницы (мс)
PAGE_WAIT_TIME=30000

# Максимальное количество страниц пагинации (0 = все страницы)
MAX_PAGES=0

# --------------------------------------------
# База данных — необязательные
# --------------------------------------------
# Путь к файлу SQLite базы данных
DB_PATH=data/avito_products.db

# --------------------------------------------
# Экспорт — необязательные
# --------------------------------------------
# Путь к выходному Excel-файлу
EXPORT_PATH=data/avito_report.xlsx

# --------------------------------------------
# Логирование — необязательные
# --------------------------------------------
# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Путь к файлу логов (если пусто — только консоль)
LOG_FILE_PATH=

# --------------------------------------------
# AI — необязательные
# --------------------------------------------
# Максимальное количество повторных попыток при ошибке API
AI_MAX_RETRIES=3

# Задержка между попытками (секунды)
AI_RETRY_DELAY=2.0

# Размер батча — сколько товаров отправлять в AI за один запрос
AI_BATCH_SIZE=10